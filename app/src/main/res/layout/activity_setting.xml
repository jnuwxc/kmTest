<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>


    <View
        android:id="@+id/divide1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/setting"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <TextView
        android:id="@+id/basicInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="基本信息"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="@id/guideLeft"
        app:layout_constraintTop_toBottomOf="@id/divide1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/divide1"
        app:layout_constraintEnd_toStartOf="@id/guideRight"/>

    <View
        android:id="@+id/divide2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#f5f5f5"
        app:layout_constraintStart_toEndOf="@id/guideLeft"
        app:layout_constraintEnd_toStartOf="@id/guideRight"
        app:layout_constraintTop_toBottomOf="@id/basicInfo"
        android:layout_marginTop="15dp" />



    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号与安全"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="@id/guideLeft"
        app:layout_constraintTop_toBottomOf="@id/divide2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/divide2"
        app:layout_constraintEnd_toStartOf="@id/guideRight"/>

    <View
        android:id="@+id/divide3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#f5f5f5"
        app:layout_constraintStart_toEndOf="@id/guideLeft"
        app:layout_constraintEnd_toStartOf="@id/guideRight"
        app:layout_constraintTop_toBottomOf="@id/account"
        android:layout_marginTop="15dp"/>


    <TextView
        android:id="@+id/darkMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号与安全"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="@id/guideLeft"
        app:layout_constraintTop_toBottomOf="@id/divide3"/>

    <Switch
        app:layout_constraintTop_toBottomOf="@id/divide3"
        app:layout_constraintEnd_toStartOf="@id/guideRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"/>

    <View
        android:id="@+id/divide4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#f5f5f5"
        app:layout_constraintStart_toEndOf="@id/guideLeft"
        app:layout_constraintEnd_toStartOf="@id/guideRight"
        app:layout_constraintTop_toBottomOf="@id/darkMode"
        android:layout_marginTop="15dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>